# KumiAI Backend Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=7892
API_RELOAD=true

# Database Settings (SQLite - zero configuration, portable)
# Default: SQLite in ~/.kumiai/kumiai.db (no setup required)
DATABASE_URL=sqlite+aiosqlite:///{kumiai_home}/kumiai.db

# Optional: For PostgreSQL (requires separate setup)
# DATABASE_URL=postgresql+asyncpg://kumiai:kumiai_password@localhost:5432/kumiai_db

# Connection pool settings (ignored for SQLite)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Paths (automatically created on first run)
KUMIAI_HOME=~/.kumiai
SKILLS_DIR=~/.kumiai/skills
AGENTS_DIR=~/.kumiai/agents
PROJECTS_DIR=~/.kumiai/projects

# Claude AI Settings
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Session Settings
SESSION_TIMEOUT=1800
SESSION_CLEANUP_INTERVAL=300

# Feature Flags
ENABLE_MCP=true
ENABLE_CUSTOM_TOOLS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Environment
ENVIRONMENT=development
